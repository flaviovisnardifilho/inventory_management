extends layout

block content
  form(method="POST", action="")
    .form-group
      label(for="category_name") Name:
      input#name(
        type="text",
        placeholder="Category name",
        name="category_name",
        required="true",
        value=undefined === category ? "" : category.name
      )

    .form-group
      label(for="category_description") Description:
      input#description(
        type="text",
        placeholder="About the category",
        name="category_description",
        required="true",
        value=undefined === category ? "" : category.description
      )
    button(type="submit") Submit

  if errors
    ul
      each error in errors
        li!= error.msg
